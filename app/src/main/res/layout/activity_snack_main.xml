<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:columnCount="3"
    android:rowCount="3"


    >

    <ImageButton
        android:id="@+id/image1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_row="0"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:src="@drawable/cse"
        android:scaleType="fitXY"
        />

    <ImageButton
        android:id="@+id/image2"
        android:src="@drawable/agriculture"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="1"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image3"
        android:src="@drawable/law"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="0"
        android:layout_row="2"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image4"
        android:src="@drawable/archi"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="0"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image5"
        android:src="@drawable/business"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="1"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image6"
        android:src="@drawable/civll"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="1"
        android:layout_row="2"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image7"
        android:src="@drawable/pharma"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_row="0"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image8"
        android:src="@drawable/bioscience"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_row="1"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:id="@+id/image9"
        android:src="@drawable/lpu"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_column="2"
        android:layout_row="2"
        android:scaleType="fitXY"
        />
</GridLayout>